% crochet

trait test-trait-a with
  command Type check;
end

local singleton a;
local singleton b;
implement test-trait-a for a;
command a check = true;
command b check = true;
command (W has test-trait-a) check-trait-a = W check;

test "Trait dispatch works" do
  assert a check === true;
  assert a check-trait-a === true;
end

