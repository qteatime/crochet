% crochet

singleton player;
singleton foyer;

scene main do
  "Hello" inspect;
  "Hello, [player]" inspect;
  "Hello, ["World"]" inspect;
  ("[1] " ++ " [2]") inspect;
  ("1 " ++ " [2]") inspect;
  ("[1] " ++ " 2") inspect;

  let Text = "[player] is at the [foyer]";
  Text inspect;
  Text parts inspect;
  Text holes inspect;
  Text static-text inspect;
end