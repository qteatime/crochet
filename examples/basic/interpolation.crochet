% crochet

singleton type player;
singleton type foyer;

scene main {
  "Hello" show;
  "Hello, [player]" show;
  "Hello, ["World"]" show;
  ("[1] " ++ " [2]") show;
  ("1 " ++ " [2]") show;
  ("[1] " ++ " 2") show;

  let Text = "[player] is at the [foyer]";
  Text show;
  Text parts show;
  Text holes show;
  Text static-text show;
}