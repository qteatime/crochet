% crochet
  
open crochet.concurrency;
open purr.ide.ui;

singleton purr;

command main-html: Root do
  handle
    purr-ui show: purr run;
  with
    use purr-ui-dom-renderer root: Root;
  end
end

command purr run do
  #widget app-frame
    | header: (
        #widget title-bar: "Purr"
      )
    | status: "Some status"
    | body: (#widget align-centered: "Hello, there");
end