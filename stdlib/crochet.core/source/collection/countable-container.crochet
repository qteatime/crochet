% crochet

/// Returns the number of elements contained in the list.
command (X is list) count =
  foreign list.count(X)
test
  assert [] count =:= 0;
  assert [1] count =:= 1;
  assert [1, 2, 3] count =:= 3;
end

/// True if the list is empty.
command (X is list) is-empty =
  X count =:= 0
test
  assert [] is-empty;
  assert not ([0] is-empty);
end