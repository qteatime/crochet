% crochet

command (X is stream) count =
  foreign crochet.stream.count(X);

command (X is stream) first =
  foreign crochet.stream.first(X);

command (X is stream) last =
  foreign crochet.stream.last(X);

command (X is stream) but-first = 
  foreign crochet.stream.but-first(X);

command (X is stream) but-last = 
  foreign crochet.stream.but-last(X);

command (X is stream) take: (N is integer) = 
  foreign crochet.stream.take(X, N);

command (X is stream) drop: (N is integer) = 
  foreign crochet.stream.drop(X, N);

command (X is stream) ++ (Y is stream) = 
  foreign crochet.stream.concat(X, Y);

command (X is stream) zip: (Y is stream) = 
  foreign crochet.stream.zip(X, Y);

command (X is stream) random-choice =
  foreign crochet.stream.random-choice(X);