% crochet

type widget-reference(
  content is widget,
  reference is reference
) is widget;

command widget reference: (Ref is reference-widget) =
  new widget-reference(self, Ref);

command widget-button reference: (Ref is reference-button) =
  new widget-reference(self, Ref);

command widget-text-input reference: (Ref is reference-text-input) =
  new widget-reference(self, Ref);

command widget-checkbox reference: (Ref is reference-checkbox) =
  new widget-reference(self, Ref);

command widget-code-editor reference: (Ref is reference-code-editor) =
  new widget-reference(self, Ref);