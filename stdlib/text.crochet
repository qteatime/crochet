% crochet

command (X is text) ++ (Y is text) = 
  foreign crochet.text.concat(X, Y);


command (X is interpolation) ++ (Y is interpolation) =
  foreign crochet.interpolation.concat(X, Y);

command (X is text) ++ (Y is interpolation) {
  (X as interpolation) ++ Y;
}

command (X is interpolation) ++ (Y is text) {
  X ++ (Y as interpolation);
}


command (X is interpolation) parts = 
  foreign crochet.interpolation.parts(X);

command (X is interpolation) holes =
  foreign crochet.interpolation.holes(X);

command (X is interpolation) static-text =
  foreign crochet.interpolation.static-text(X);