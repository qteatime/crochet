% crochet

command (X is text) ++ (Y is text) = crochet.text.concat(X, Y);

command (X is interpolation) ++ (Y is interpolation) =
  crochet.interpolation.concat(X, Y);

command (X is text) ++ (Y is interpolation) {
  (X as interpolation) ++ Y;
}

command (X is interpolation) ++ (Y is text) {
  X ++ (Y as interpolation);
}